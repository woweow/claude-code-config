{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "apiKeyHelper": "uvx --default-index=https://repository.sofi.com/artifactory/api/pypi/pypi/simple llm-proxy-keys-cli",
  "env": {
    "ANTHROPIC_BASE_URL": "https://internal.sofitest.com/llm-proxy",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1",
    "API_TIMEOUT_MS": "600000"
  },
  "includeCoAuthoredBy": false,
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/coding/personal/claude-config/main/hooks/session_start.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay ~/Documents/nice.m4a -v 1"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 ~/coding/personal/claude-config/main/status_line/git-and-prompt.py",
    "padding": 0
  },
  "enabledPlugins": {
    "token-optimized-builder@brogers-plugins": true
  },
  "alwaysThinkingEnabled": false,
  "defaultModel": "opusplan",
  "feedbackSurveyState": {
    "lastShownTime": 1754070025091
  },
  "additionalDirectories": [
    "~/additionalClaudeDirs/"
  ]
}
